extends layout

block scripts
  script(src='https://cdn.auth0.com/js/auth0/8.7/auth0.min.js')

block content
  h4 Login using a one time code sent via sms using your own custom UI
  .enter-phone
    label Enter your phone number &nbsp;&nbsp;
    input.phone-number
    br
    br
    button.btn.btn-default(onclick='sendSMS()') Send SMS
  .enter-code(style='display:none')
    label Enter the verification code  &nbsp;&nbsp;
    input.code  
    br
    br
    button.btn.btn-default(onclick='login()') Login
  
  script.
    var webAuth = new auth0.WebAuth({
      clientID: '#{env.AUTH0_CLIENT_ID}', 
      domain: '#{env.AUTH0_DOMAIN}',
      redirectUri: '#{env.AUTH0_CALLBACK_URL}',
      responseType: 'code'
    });
    
    function sendSMS(){
      var phoneNumber = $('input.phone-numnber').val();
      webAuth.passwordlessStart({
        connection: 'sms',
        send: 'code',
        phoneNumber: phoneNumber
      }, function(err,res) {
        if (err) {
          alert('error sending e-mail: ' + err.error_description);
          return;
        }
        $('.enter-phone').hide();
        $('.enter-code').show();
      });
    }
    
    function login(){
      var phoneNumber = $('input.phone-number').val();
      var code = $('input.code').val();
      webAuth.passwordlessVerify({
        connection: 'sms',
        phoneNumber: phoneNumber,
        verificationCode: code
      }, function (err,res) {
        // handle errors or continue
      });
    };
